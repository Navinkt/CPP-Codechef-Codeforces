#include<bits/stdc++.h>
#define fio ios_base::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
#define ll long long int
using namespace std;

int main()
{
	
fio
	
ll t;

cin>>t;
	
while(t--)
{   ll n;
cin>>n;
double hra,da,a;
if(n<1500)
{
hra=0.1*n*1.00;
da=0.9*n*1.00;

}
else
{
hra=500;
da=0.98*n*1.00;
}
a=hra+da+n;
cout<<fixed<<setprecision(2)<<a<<endl;


}
return 0;
}


